<%- include('header.ejs') %>
<form action="/users" method="post">
    <h1 class="d-flex align-items-center justify-content-center m-3 p-3">Enter the details of user :</h1>
    <div class="d-flex align-items-center justify-content-center m-3 p-3">
        <input class="form-control p-1 m-2" type="text" name="name" id="" required placeholder="Name" >
        <input class="form-control p-1 m-2" type="email" name="email" id="" required placeholder="Email address">
        <input class="form-control p-1 m-2" type="phoneNumber" name="phoneNumber" id="" required placeholder="phoneNumber">
    </div>
    
    <div class="d-flex align-items-center justify-content-center m-3 p-3">
        
        <button type="submit" class="btn btn-primary ">Submit</button>

    </div>
</form>